<%- include('partials/header') %>

<div class="container" id="main-window">
    <div class="container-fluid px-2 py-3 header">
        <h3><i class="fas fa-laugh-beam px-1"></i>HangOn!</h3>
        <h5 class="px-4 py-2"><a href="/">Leave Room</a></h5>
    </div>
    <div class="container-fluid" id="middle">
        <div class="row" style="height: 100%;">
            <div class="col-md-2 px-3 py-2" id="left-menu">
                <h5><i class="fas fa-comments px-1"></i><span id="room-name"></span></h5>
                <hr>
                <h5><i class="fas fa-users px-1"></i>Users</h5>
                <ul class="pt-3" id="users"></ul>
            </div>
            <div class="col-md-10" id="chat-box">

            </div>
        </div>
    </div>
    <div class="container-fluid" style="background: #ad1f1f;">
        <div class="container py-3 d-flex" id="chat-form">
            <textarea name="" id="msg-text" rows="1" placeholder="Start typing..."></textarea>
            <button id="send" style="color: #AD1F1F;"><i class="fas fa-paper-plane px-1"></i>Send</button>
        </div>
    </div>
</div>



<%- include('partials/footer') %>